<div class="row-fluid">
  <div class="well well-small">
    <table class="table table-bordered table-striped table-hover">
      <thead>
      <tr>
        <th>Current Balance</th>
        <th>Cumulative Campaign Budget (Pending and Active)</th>
        <th>Maximum Balance to Add</th>
      </tr>
      </thead>
      <tbody>
      <tr>
        <td><%= number_to_currency(current_user.account.developer_balance) %></td>
        <td><%= number_to_currency(@cumulative_budget) %></td>
        <td><%= number_to_currency(@max_budget_to_add) %></td>
      </tr>
      </tbody>
    </table>
  </div>
</div>

<div class="row-fluid">
  <div class="well well-small">
    <%= form_tag charges_path do %>
      <%= label_tag(:add_balance, "Amount to Add to Balance:") %>
      $<%= number_field_tag("add_balance", nil, :min => 0, :max => @max_budget_to_add) %><br>
        <script src="https://checkout.stripe.com/v2/checkout.js" class="stripe-button"
                data-key="<%= Rails.configuration.stripe[:publishable_key] %>"
                data-description="Enter Credit Card Info"></script>
    <% end %>
  </div>
</div>