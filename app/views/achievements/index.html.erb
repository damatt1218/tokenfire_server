<div class="span16">
  <header class="page-header">
    <h1><%= @application.name %> Achievements</h1>
  </header>
</div>
<table class="zebra-striped">
  <thead>
  <tr>
    <th>Name</th>
    <th>Description</th>
    <th>Token value</th>
    <th>Cost</th>
  </tr>
  </thead>
  <tbody>
  <% @application.achievements.each do |achievement| %>
      <tr>
        <td><%= achievement.name%></td>
        <td><%= achievement.description%></td>
        <td><%= achievement.value%></td>
        <td><%= achievement.cost%></td>
        <td><%= link_to 'Edit', edit_app_achievement_path(achievement.app_id, achievement) %></td>
      </tr>
  <% end %>
  </tbody>
</table>

<div class="actions">
  <%= link_to 'New', new_app_achievement_path(@application), :class => "btn primary" %>
</div>