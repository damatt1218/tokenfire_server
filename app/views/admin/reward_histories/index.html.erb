<header class="page-header">
  <h1>Pending Rewards</h1>
</header>
<div class="row-fluid">
<table class="table table-bordered">
  <thead>
  <tr>
    <th>ID</th>
    <th><b>Username</b></th>
    <th><b>Reward</b></th>
    <th><b>Created at</b></th>
    <th><b>Actions</b></th>
  </tr>
  </thead>
  <tbody>
  <% @reward_histories.each do |reward_history| -%>
      <tr>
        <td><%= reward_history.id %></td>
        <td><%= link_to reward_history.account.user.username, admin_user_path(reward_history.account.user) %></td>
        <td><%= reward_history.reward.name %></td>
        <td><%= reward_history.created_at %></td>
        <td>
          <%= link_to "Process", edit_admin_reward_history_path(reward_history) %>
          REJECT
        </td>
      </tr>
  <% end -%>
  </tbody>
</table>
</div>
