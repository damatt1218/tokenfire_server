<header class="page-header">
  <h2><%= @user.username %></h2>
</header>
<div class="row">
  <div class="span6">
    <p>
      <b>Username: </b>
      <%= @user.username %>
    </p>

    <p>
      <b>Email: </b>
      <%= @user.email %>
    </p>

    <p>
      <b>First Name: </b>
      <%= @user.first_name %>
    </p>

    <p>
      <b>Last Name: </b>
      <%= @user.last_name %>
    </p>

    <p>
      <b>Company: </b>
      <%= @user.company %>
    </p>
  </div>
  <div class="span6">
    <% for role in Role.all %>
      <p>
        <b><%= role.name %>: </b>
        <%= @user.roles.include?(role) %>
      </p>
    <% end %>
  </div>
</div>
<div class="row">
  <div class="span6">
    <div class="well">
      <h4>Account Information</h4>
      <p>
      <b>Balance</b>
      <%= @user.account.balance %>
      </p>
      <p>
      <b>Devices: </b><%= @user.devices.count %>
      <% if @user.devices.count > 0 %>
      <ul>
      <% @user.devices.each do |device| %>
      <li><%= device.uuid %></li>
      <% end %>
      </ul>
      <% end %>
      </p>
    </div>
  </div>
  <div class="span6">
    <div class="well">
      <b>Recent Activity</b>
    </div>
  </div>
</div>

<div class="form-actions">
  <%= link_to "Back", admin_users_path, :class => 'btn'  %>
  <%= link_to "Edit", edit_admin_user_path(@user), :class => 'btn' %>
  <%= link_to "Delete", admin_user_path(@user), :method => "delete", :confirm => "#{t("web-app-theme.confirm", :default => "Are you sure?")}", :class => 'btn' %>
</div>
