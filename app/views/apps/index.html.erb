<div class="row-fluid">
  <header class="page-header">
    <h3>Your Applications</h3>
  </header>
  <h1>
    Apps: <%= @applications.count %> &nbsp;&nbsp;
    Users: <%= @users %> &nbsp;&nbsp;
    Usage: <%= @usageTime %> min.
  </h1>
  <p>
    <%= link_to 'New Application', new_oauth_application_path, :class => "btn primary" %>
    <%= link_to 'Manage OAuth Attributes', oauth_applications_path, :class => "btn" %>
  </p>
  <table class="table table-bordered table-striped table-hover">
    <thead>
    <tr>
      <th>Name</th>
      <th>Total Users</th>
      <th>DAU</th>
      <th>Avg. Sessions / day</th>
      <th>Avg. Session Length</th>
      <th>Total Usage Time (Minutes)</th>
      <th>Analytics</th>
      <th>App Key</th>
    </tr>
    </thead>
    <tbody>
    <% @applications.each do |application| %>
        <tr id="application_<%= application.id %>">
          <td><%= link_to application.name, app_path(application) %></td>
          <td><%= application.accounts.count %></td>
          <td>Insert DAU</td>
          <td>Insert avg sessions</td>
          <td>avg. session legnth</td>
          <td><%= application.getTotalUsageTime %></td>
          <td><%= link_to 'View Statistics', app_usage_path(application) %></td>
          <td><%= link_to 'View Key', oauth_application_path(application) %></td>
        </tr>
    <% end %>
    </tbody>
  </table>
</div>
